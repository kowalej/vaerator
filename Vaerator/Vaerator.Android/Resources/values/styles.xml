<?xml version="1.0" encoding="UTF-8"?>
<resources>
	<!-- Base theme applied no matter what API -->
	<style name="MyTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
		<!--If you are using revision 22.1 please use just windowNoTitle. Without android:-->
		<item name="windowNoTitle">true</item>
		<!--We will be using the toolbar so no need to show ActionBar-->
		<item name="windowActionBar">false</item>
		<!-- Set theme colors from http://www.google.com/design/spec/style/color.html#color-color-palette-->
		<!-- colorPrimary is used for the default action bar background -->
		<item name="colorPrimary">#300000</item>
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">#1976D2</item>
		<!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
		<item name="colorAccent">#9f2727</item>
		<!-- You can also set colorControlNormal, colorControlActivated
         colorControlHighlight and colorSwitchThumbNormal. -->
		<item name="windowActionModeOverlay">true</item>
		<item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <!-- Remove all caps from buttons -->
    <item name="android:textAppearanceButton">@style/MyTextAppearance.Material.Button</item>
    <item name="android:buttonStyle">@style/ButtonMyTheme</item>
    <item name="android:imageButtonStyle">@style/ImageButtonMyTheme</item>
    <item name="android:seekBarStyle">@style/SeekBarMyTheme</item>
    <item name="android:buttonStyleToggle">@style/ToggleMyTheme</item>
  </style>

  <style name="MyTheme.Main" parent="MyTheme.Base">
  </style>

  <style name="ButtonMyTheme" parent="android:Widget.Button">
    <item name="android:background">@drawable/mytheme_btn_default_holo_light</item>
    <item name="android:minHeight">48dip</item>
    <item name="android:minWidth">64dip</item>
    <item name="android:textColor">#000000</item>
  </style>

  <style name="ImageButtonMyTheme" parent="android:Widget.ImageButton">
    <item name="android:background">@drawable/mytheme_btn_default_holo_light</item>
  </style>

  <style name="SeekBarMyTheme" parent="android:Widget.SeekBar">
    <item name="android:progressDrawable">@drawable/mytheme_scrubber_progress_horizontal_holo_light</item>
    <item name="android:indeterminateDrawable">@drawable/mytheme_scrubber_progress_horizontal_holo_light</item>
    <item name="android:thumb">@drawable/mytheme_scrubber_control_selector_holo_light</item>
    <item name="android:minHeight">20dip</item>
    <item name="android:maxHeight">20dip</item>
    <item name="android:thumbOffset">16dip</item>
    <item name="android:paddingLeft">24dip</item>
    <item name="android:paddingRight">24dip</item>
  </style>

  <style name="ToggleMyTheme" parent="android:Widget.Button.Toggle">
    <item name="android:background">@drawable/mytheme_btn_toggle_holo_light</item>
    <item name="android:minHeight">48dip</item>
    <item name="android:textColor">#000000</item>
  </style>

  <color name="mytheme_color">#9f2727</color>
  
  <style name="MyTheme.Splash" parent="MyTheme.Base">
    <item name="android:windowBackground">@drawable/splash</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowFullscreen">true</item>
  </style>
  
	<style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
		<item name="colorAccent">#FF4081</item>
	</style>
  
  <style name="MyTextAppearance.Material.Button" parent="@android:style/TextAppearance.Material.Button">
    <item name="textAllCaps">false</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:paddingLeft">0dp</item>
    <item name="android:paddingRight">0dp</item>
  </style>

  <!-- Primary name shown in launcher and action bar. -->
  <string name="app_name_primary">Vaerator</string>
  
  <!-- Secondary name shown in manage apps. -->
  <string name="app_name_secondary">Vaerator</string>
</resources>


