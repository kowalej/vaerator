<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="Vaerator.App">
  <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Primary">#3c0707</Color>
            <Color x:Key="PrimaryDark">#300000</Color>
            <Color x:Key="Accent">#0d0d0d</Color>
            <Color x:Key="SemiTransparent">#24ffffff</Color>
            <Color x:Key="FullyTransparent">#00ffffff</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="{StaticResource Primary}" />
                <Setter Property="BarTextColor" Value="White" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
